{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "lib": ["ES2020", "dom"],
        "allowJs": true,
        "declaration": true,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "experimentalDecorators": true
    }
}